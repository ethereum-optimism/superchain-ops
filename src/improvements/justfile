# Create a new template or task
# e.g. just new [template|task]
new TYPE:
    #!/usr/bin/env bash
    set -e
    
    # shellcheck disable=SC2194
    case "{{TYPE}}" in
        template)
            ./script/create_template.sh
            ;;
        task)    
            ./script/create_task.sh
            ;;
        *)
            echo "Invalid type: {{TYPE}}"
            echo "Usage: just new [template|task]"
            exit 1
            ;;
    esac
